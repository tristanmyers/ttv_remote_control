{
    "manifest_version": 2,
    "name": "twitch remote control",
    "version": "0.1",

    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "https://twitch.tv/*",
        "https://*.twitch.tv/*",
        "http://localhost:8000/*"
    ],

    "content_scripts": [
        {
            "matches": [
                "https://twitch.tv/*",
                "https://*.twitch.tv/*",
                "http://localhost:8000/*"
            ],
            "run_at": "document_start",

            "js": [
                "/extension/content.js"
            ]
        }
    ],

    "browser_action": {
        "default_icon": "/extension/remote_control.png"
    }
}